        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="GREEN:?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
